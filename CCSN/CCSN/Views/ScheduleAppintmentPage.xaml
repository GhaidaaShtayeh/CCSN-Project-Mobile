<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CCSN.Views.ScheduleAppintmentPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:XamForms.Controls;assembly=XamForms.Controls.Calendar"
    xmlns:vm="clr-namespace:CCSN.ViewModels"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    BackgroundColor="AliceBlue">
    <ContentPage.BindingContext>
        <vm:ScheduleAppointmentPageModelView />
    </ContentPage.BindingContext>
    <ContentPage.Behaviors>
        <xct:EventToCommandBehavior Command="{Binding Appearing}" EventName="Appearing" />
    </ContentPage.Behaviors>
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label
                HorizontalTextAlignment="Center"
                Style="{StaticResource navlabel}"
                Text="add new Appointment" />

        </StackLayout>
    </NavigationPage.TitleView>
    <ScrollView>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" VerticalOptions="Start">
               
                    <Picker
                         Margin="5,0,5,0"
                         HeightRequest="40"
                        x:Name="AppoiPatientName"
                        Title="Patient Name"
                        FontSize="Small"
                        ItemDisplayBinding="{Binding PatientName}"
                        ItemsSource="{Binding Patients}"
                        SelectedItem="{Binding PatienSelected}" />
              
            </StackLayout>

            <StackLayout Grid.Row="1">
                <Frame
                    Margin="15,18,15,0"
                    Padding="10"
                    BackgroundColor="White"
                    CornerRadius="10"
                    HasShadow="True"
                    HeightRequest="280"
                    OutlineColor="#1EA6D6">
                    <controls:Calendar
                        Padding="10,0,10,0"
                        DisabledBorderColor="#1EA6D6"
                        HeightRequest="250"
                        SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                        ShowNumberOfWeek="false"
                        StartDay="Monday"
                        TitleLabelTextColor="#1EA6D6"
                        TitleLeftArrowTextColor="#1EA6D6"
                        TitleRightArrowTextColor="#1EA6D6" />
                </Frame>
            </StackLayout>
            <StackLayout Grid.Row="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="Center"
                        Text=" Time :"
                        VerticalOptions="Center" />

                    <TimePicker
                        x:Name="AppointmentTime"
                        Grid.Column="1"
                        Margin="4"
                        BackgroundColor="White"
                        HorizontalOptions="Center"
                        Time="{Binding SelectedTime, Mode=TwoWay}">
                        <TimePicker.Format>hh:mm tt</TimePicker.Format>
                    </TimePicker>

                </Grid>
            </StackLayout>


            <Button
                x:Name="AddAppointment"
                Grid.Row="3"
                Command="{Binding Add}"
                Text="Add Appointment"
                 Style="{StaticResource AddButton}" />
        </Grid>
    </ScrollView>
</ContentPage>



