<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CCSN.Views.HomePage"
             Title ="Home"
             xmlns:viewmodels="clr-namespace:CCSN.ViewModels">

    <NavigationPage.TitleView >
        <StackLayout Orientation="Horizontal" >
            <Label Text="CCSN" 
                   FontSize="Large" 
                   FontAttributes="Bold"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="Start"/>

            <ImageButton Source="https://upload.wikimedia.org/wikipedia/commons/thumb/0/0b/Search_Icon.svg/1024px-Search_Icon.svg.png"
                 HorizontalOptions="EndAndExpand"
                   VerticalOptions="CenterAndExpand" 
                   WidthRequest="30"
                         BackgroundColor="#00ffffff"/>

            <ImageButton Source="https://static.thenounproject.com/png/3134331-200.png"
                   WidthRequest="30"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="End"
                    BackgroundColor="#00ffffff"
                 
                 />
        </StackLayout>
    </NavigationPage.TitleView>

    <StackLayout>
              <Label Text = "Today Appointment" TextColor = "#2196f3"   WidthRequest = "200"
                   HeightRequest = "30" FontSize = "Large" Margin = "13" FontAttributes = "Bold" ></ Label >
        <Frame >
            <Label Text = "Ahmad ali      9:00AM"  WidthRequest = "200"
                   HeightRequest = "20"  FontSize = "Medium" Margin = "10" ></ Label >
        </ Frame >

        <Frame >
            <Label Text = "Ahmad ali      9:00AM"  WidthRequest = "200"
                   HeightRequest = "20"  FontSize = "Medium" Margin = "10" ></ Label >

        </ Frame >

        <Frame >

            <Label Text = "Ahmad ali      9:00AM"  WidthRequest = "200"
                   HeightRequest = "20"  FontSize = "Medium" Margin = "10" ></ Label >

        </ Frame >


        <Label Text = "Tomorrow Appointment" TextColor = "#2196f3"   WidthRequest = "200"
                   HeightRequest = "30" FontSize = "Large" Margin = "13" FontAttributes = "Bold" />

        <Frame >

            <Label Text = "Ahmad ali      9:00AM"  WidthRequest = "200"
                   HeightRequest = "20"  FontSize = "Medium" Margin = "10" ></ Label >

        </ Frame >

        <Frame >

            <Label Text = "Ahmad ali      9:00AM"  WidthRequest = "200"
                   HeightRequest = "20"  FontSize = "Medium" Margin = "10" ></ Label >

        </ Frame >

        <Frame >

            <Label Text = "Ahmad ali      9:00AM"  WidthRequest = "200"
                   HeightRequest = "20"
                   FontSize = "Medium" Margin = "10" ></ Label >

        </ Frame >


        <Image Source = "https://aws1.discourse-cdn.com/business5/uploads/webflow1/original/3X/0/f/0f47cc7c2a7cfb443239076e36fde9abff32a2c2.png" WidthRequest = "200" HorizontalOptions = "Start" />

        <Label Text="Today Appointments : "
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand"
                Padding="25"
                TextColor="#1EA6D6"
                FontAttributes="Bold"
                FontSize="15"/>

        <ListView x:Name="SpecalistListView"
                  ItemsSource="{Binding Apo}"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <StackLayout HorizontalOptions="StartAndExpand">
                                <Label Text="{Binding AppointmentNumber}" FontSize="Medium"/>
                                <Label Text="{Binding AppointmentPatientName}" FontSize="Medium"/>
                                <Label Text="{Binding AppointmentDate}" FontSize="Medium"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>


    <ContentPage.BindingContext>
        <viewmodels:HomePageModelView/>
    </ContentPage.BindingContext>
</ContentPage>
