<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CCSN.Views.ComponentPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="label" 
                   WidthRequest="200" 
                   HeightRequest="40" 
                   FontSize="Medium" 
                   ></Label>

            <Button Text="Button" 
                    BackgroundColor="#1EA6D6" 
                    WidthRequest="100"
                    FontSize="Medium"
                    ></Button>
            <Button  Text="female/male"
                     WidthRequest="10"
                     HeightRequest="50" 
                     BackgroundColor="#1EA6D6" 
                     FontSize="Medium"  
                     BorderRadius="30"
                     ></Button>
            <Button Text="+" 
                    WidthRequest="60" 
                    HeightRequest="60"
                    BorderRadius="30"
                    HorizontalOptions="Center" 
                    VerticalOptions="Center" 
                    BackgroundColor="#1EA6D6"  
                    FontSize="Large"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>